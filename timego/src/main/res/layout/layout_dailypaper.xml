<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/royalblue"
        android:id="@+id/first_line">

        <ImageView
            android:id="@+id/txt_D_return"
            android:layout_height="20dp"
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:onClick="onClick"
            android:src="@drawable/back_joern" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:layout_marginRight="50dp"
            android:layout_gravity="end"
            android:id="@+id/top_name"
            android:hint="@string/menu_newspaper"/>
    </LinearLayout>

  <!--  <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleX="1.1"
        android:id="@+id/dailypaper_list"/>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:id="@+id/dailypaper_1"
                android:src="@drawable/daily_1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:scaleY="1"
                android:scaleX="1.2"
                android:layout_gravity="center"
                />
            <View
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/gray_8f"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:id="@+id/dailypaper_2"
                android:src="@drawable/daily_2"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:scaleY="1"
                android:scaleX="1.2"
                />
            <View
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/gray_8f"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:id="@+id/dailypaper_3"
                android:src="@drawable/daily_3"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:scaleY="1"
                android:scaleX="1.2"
                />
            <View
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/gray_8f"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:id="@+id/dailypaper_4"
                android:src="@drawable/daily_4"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:scaleY="1"
                android:scaleX="1.2"
                />
        </LinearLayout>







